@model IEnumerable<RegistarPreduzecaV11._0.Models.Preduzece>

@{
    ViewBag.Title = "Index";
}
<div class="container-fluid">
    <br />
    <div class="row">
        <div class="col-md-6">
            <h2>Spisak preduzeća</h2>
        </div>
        <div class="col-md-6">
            @if (User.IsInRole(RegistarPreduzecaV11._0.Models.RoleName.SaPravomAdministracije)
                        || User.IsInRole(RegistarPreduzecaV11._0.Models.RoleName.SaPravomUnosa))
            {
                <br />
                @Html.ActionLink("Dodaj novo preduzeće", "Create", null, new { @class = "btn btn-primary pull-right" })
            }
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RegNaziv)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RegAdresa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Opstina)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostanskiBroj)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.OpisDelatnosti)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BrojRacuna)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WebStranica)
                    </th>

                    @if (User.IsInRole(RegistarPreduzecaV11._0.Models.RoleName.SaPravomAdministracije)
                        || User.Identity.IsAuthenticated)
                    {
                        <th></th>
                    }
                    @if (User.IsInRole(RegistarPreduzecaV11._0.Models.RoleName.SaPravomAdministracije)
                        || User.IsInRole(RegistarPreduzecaV11._0.Models.RoleName.SaPravomUnosa))
                    {
                        <th></th>
                        <th></th>
                    }
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegNaziv)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegAdresa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Opstina)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostanskiBroj)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.OpisDelatnosti)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BrojRacuna)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WebStranica)
                        </td>

                        @if (User.IsInRole(RegistarPreduzecaV11._0.Models.RoleName.SaPravomAdministracije)
                            || User.IsInRole(RegistarPreduzecaV11._0.Models.RoleName.SaPravomUnosa))
                        {
                            <td>
                                @Html.ActionLink("Izmeni", "Edit", new { id = item.Id }, new { @class = "text-success" })
                            </td>
                        }
                        <td>
                            @Html.ActionLink("Detalji", "Details", new { id = item.Id }, new { @class = "text-info" })
                        </td>
                        @if (User.IsInRole(RegistarPreduzecaV11._0.Models.RoleName.SaPravomAdministracije))
                        {
                            <td>
                                @Html.ActionLink("Obriši", "Delete", new { id = item.Id }, new { @class = "text-danger" })
                            </td>
                        }
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
