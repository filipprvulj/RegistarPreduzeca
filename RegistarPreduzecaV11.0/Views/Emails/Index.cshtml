@model IEnumerable<RegistarPreduzecaV11._0.Models.Email>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <br />
    <div class="row">
        <div class="col-md-6">
            <h2>Spisak Email-ova</h2>
        </div>
        <div class="col-md-6">
            <br />
            @Html.ActionLink("Dodaj novi Email", "Create", null, new { @class="btn btn-primary pull-right"})
        </div>
    </div>
    <hr />

    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.KontaktOsoba.Ime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OznakaTipa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmailAdresa)
                    </th>
                    <th></th>
                    <th></th>
                    @if(User.IsInRole(RegistarPreduzecaV11._0.Models.RoleName.SaPravomAdministracije))
                    {
                        <th></th>
                    }
                </tr>

                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.KontaktOsoba.Ime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OznakaTipa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAdresa)
                        </td>
                        <td>
                            @Html.ActionLink("Izmeni", "Edit", new { id=item.Id }, new { @class="text-success"}) 
                        </td>
                        <td>
                            @Html.ActionLink("Detalji", "Details", new { id=item.Id }, new { @class="text-info" }) 

                        </td>
                        @if (User.IsInRole(RegistarPreduzecaV11._0.Models.RoleName.SaPravomAdministracije))
                        {
                            <td>
                                @Html.ActionLink("Obriši", "Delete", new { id=item.Id }, new { @class = "text-danger"} )
                            </td>
                        }
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
