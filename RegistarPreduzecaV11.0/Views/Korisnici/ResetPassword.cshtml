@model RegistarPreduzecaV11._0.Models.ApplicationUser
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reset Password</h2>
@using (Html.BeginForm("ResetPasswordConfirm", "Korisnici"))
{ 
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m=>m.UserName, new { @readonly="true", @class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("Novi password")
        @Html.Password("password", null, new { @class="form-control"})
        @Html.ValidationMessage("Error", new { @class="text-danger" })
    </div>
    <button class="btn btn-primary" type="submit">Potvrdi</button>
}

