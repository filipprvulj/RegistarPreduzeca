@model IEnumerable<RegistarPreduzecaV11._0.Models.KontaktTelefon>

@{
    ViewBag.Title = "Index";
}

<h2>Spisak kontakt telefona</h2>

<p>
    @Html.ActionLink("Novi telefon", "Create", null, new { @class="btn btn-primary" })
</p>
<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KontaktOsoba.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OznakaTipa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrojTelefona)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lokal)
        </th>
        <th></th>
        <th></th>
        @if (User.IsInRole(RegistarPreduzecaV11._0.Models.RoleName.SaPravomAdministracije))
        {
            <th></th>
        }
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KontaktOsoba.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OznakaTipa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrojTelefona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lokal)
        </td>
        <td>
            @Html.ActionLink("Izmeni", "Edit", new { id=item.Id }, new { @class="text-success" }) 
        </td>
        <td>
            @Html.ActionLink("Detalji", "Details", new { id=item.Id }, new { @class="text-info" })
        </td>
        @if(User.IsInRole(RegistarPreduzecaV11._0.Models.RoleName.SaPravomAdministracije))
        {
            <td>
                @Html.ActionLink("Obriši", "Delete", new { id=item.Id }, new { @class="text-danger" })
            </td>
        }
    </tr>
}

</table>
