@model RegistarPreduzecaV11._0.Models.KontaktTelefon

@{
    ViewBag.Title = "Delete";
}


<br />
<h2>Da li ste sigurni da želite da obrišete ovaj kontakt telefon?</h2>
<div>
    <hr />
    <table class="table table-hover">
        <tr>
            <th width="10%">@Html.DisplayNameFor(model => model.KontaktOsoba.Ime)</th>
            <td>@Html.DisplayFor(model => model.KontaktOsoba.Ime)</td>
        </tr>
        <tr>
            <th width="10%">@Html.DisplayNameFor(model => model.OznakaTipa)</th>
            <td>@Html.DisplayFor(model => model.OznakaTipa)</td>
        </tr>
        <tr>
            <th width="10%">@Html.DisplayNameFor(model => model.BrojTelefona)</th>
