    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obriši" class="btn btn-danger btn-sm " />
            <br />
            <br />
            @Html.ActionLink("Vrati se na listu", "Index")
        </div>
    }
